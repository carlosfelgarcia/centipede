{
  "scripts": [
    "*/*.py"
  ],
  "vars": {
    "prefix": "/data/job",
    "job": "999_r_d",
    "__uiHintSourceColumns": [
      "assetName",
      "mapType",
      "variant"
    ]
  },
  "taskHolders": [
    {
      "task": "createTextureVersion",
      "matchTypes": [
        "exrTexture"
      ],
      "matchVars": {
      },
      "taskOptions": {
        "maketxArgs": "-v -u --unpremult --oiio"
      },
      "targetTemplate": "{prefix}/{job}/publish/assets/!{assetName}/texture/{variant}/(newVersion <parentPath>)/info.json",
      "taskHolders": [
        {
          "task": "sgTexturePublish",
          "matchTypes": [
            "json"
          ],
          "matchVars": {
          },
          "taskOptions": {
            "comment": "texture publish"
          },
          "targetTemplate": "{filePath}"
        },
        {
          "task": "chmod",
          "taskOptions": {
            "mode": 444
          },
          "matchTypes": [
            "json"
          ],
          "matchVars": {
          },
          "targetTemplate": "(dirname {filePath})"
        }
      ]
    }
  ]
}
