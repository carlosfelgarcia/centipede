{
  "scripts": [
    "*/*.py"
  ],
  "vars": {
    "prefix": "/data/job",
    "job": "RND",
    "__uiHintSourceColumns": [
      "assetName",
      "step",
      "variant",
      "pass"
    ]
  },
  "taskHolders":
  [
    {
      "task": "createTurntableVersion",
      "matchTypes": [
        "turntable"
      ],
      "taskMetadata": {
        "taskWrapper.name": "subprocess",
        "taskWrapper.options": {
          "user": "$CENTIPEDE_VERSION_PUBLISHER_USER"
        }
      },
      "targetTemplate": "{prefix}/{job}/assets/{assetName}/publish/{step}/{variant}/(newVersion <parentPath>)",
      "taskHolders":
      [
        {
          "task": "nukeTemplate",
          "taskOptions": {
            "topLeft": "{assetName}-{variant}",
            "topRight": "(yyyy)(mm)(dd)",
            "notes": "",
            "videocodec": "",
            "bottomLeft": "{pass}, {versionName}",
            "template": "{prefix}/{job}/config/centipede/mediaDelivery/templates/template.nk",
            "enableSlate": 0,
            "enableColorSpace": 0,
            "enableReformat": 0,
            "enableTimecode": 1
          },
          "targetTemplate": "{dataPath}/{name}.mov",
          "matchTypes": [
            "exr"
          ],
          "matchVars": {
            "imageType": [
              "sequence"
            ]
          },
          "taskMetadata": {
            "taskWrapper.name": "subprocess",
            "taskWrapper.options": {
              "user": "$CENTIPEDE_VERSION_PUBLISHER_USER"
            }
          },
          "taskHolders": [
            {
              "task": "appendToVersion",
              "taskMetadata": {
                "taskWrapper.name": "subprocess",
                "taskWrapper.options": {
                  "user": "$CENTIPEDE_VERSION_PUBLISHER_USER"
                }
              },
            }
          ]
        },
        {
          "task": "sgPublish",
          "taskMetadata": {
            "taskWrapper.name": "upython2",
            "taskWrapper.options": {
              "publishedFileType": "Rendered Image",
              "comment": "turntable publish",
              "publishName": "{renderName}"
            }
          },
          "matchTypes": [
            "json"
          ]
        }
      ]
    }
  ]
}
