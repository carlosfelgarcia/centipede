{
  "scripts": [
    "*/*.py"
  ],
  "vars": {
    "prefix": "/data/job",
    "job": "RND",
    "__uiHintSourceColumns": [
      "shot",
      "step",
      "pass",
      "type"
    ]
  },
  "tasks":
  [
  {
    "run": "createRenderVersion",
    "metadata": {
      "match.types": [
        "shotRender"
      ],
      "wrapper.name": "subprocess",
      "wrapper.options": {
        "user": "$CENTIPEDE_VERSION_PUBLISHER_USER"
      }
    },
    "target": "{prefix}/{job}/sequences/{seq}/{shot}/publish/{step}/{pass}/(newver <parentPath>)",
    "tasks":
    [
      {
        "run": "nukeTemplate",
        "options": {
          "topLeft": "{shot}",
          "topRight": "(yyyy)(mm)(dd)",
          "notes": "",
          "videocodec": "",
          "bottomLeft": "{pass}, {versionName}",
          "template": "{prefix}/{job}/config/centipede/mediaDelivery/templates/template.nk",
          "enableSlate": 0,
          "enableColorSpace": 0,
          "enableReformat": 0,
          "enableTimecode": 1
        },
        "target": "{dataPath}/{name}.mov",
        "metadata": {
          "match.types": [
            "exr"
          ],
          "match.vars": {
            "imageType": [
              "sequence"
            ]
          },
          "wrapper.name": "subprocess",
          "wrapper.options": {
            "user": "$CENTIPEDE_VERSION_PUBLISHER_USER"
          }
        },
        "tasks": [
          {
            "run": "appendToVersion",
            "metadata": {
              "wrapper.name": "subprocess",
              "wrapper.options": {
                "user": "$CENTIPEDE_VERSION_PUBLISHER_USER"
              }
            },
          }
        ]
      },
      {
        "run": "sgPublish",
        "metadata": {
          "match.types": [
            "json"
          ],
          "wrapper.name": "upython2",
          "wrapper.options": {
            "publishedFileType": "Rendered Image",
            "comment": "render publish",
            "publishName": "{renderName}"
          }
        }
      }
    ]
  }
]
}
